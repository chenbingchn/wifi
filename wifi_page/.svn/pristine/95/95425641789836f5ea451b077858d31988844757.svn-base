body {
    min-width: 300px;
    max-width: 640px;
    margin: 0 auto;
    color: #fff;
}
#page_center {
    background: url(../../images/prize/bg_top.jpg) top no-repeat,
                url(../../images/prize/bg_center.jpg) bottom repeat-y;
    background-size: contain;
    position: relative;
    margin-top: -50px;
    z-index: -1;
}
#prize_content {
    width: 69.02%;
    text-align: left;
    margin: 0 11.67% 0 9.31%;
    padding: 65% 5% 5% 5%;
}
p.prize_title {
    font-size: 1.167em;
    margin: 10px auto;
}
p.mobile_list {
    list-style: none;
}
ul.mobile_list li {
    display: inline-block;
    width: 30%;
    padding-left: 8%;
    line-height: 25px;
}
.clearfix {
    clear: both;
}
#page_bottom {
   background: url(../../images/prize/bg_bottom.jpg);
   background-size: 100% 100%;
   padding-bottom: 50px;
   padding-top: 50px;
}
#page_bottom #bottom_content {
    width: 79.02%;
    margin: 0 11.67% 0 9.31%;
    padding-top: 20px; 
}
#page_bottom #left_text {
     width: 70%;
     float: left;
  }
#page_bottom #left_text p {
    font-size: 1em;
    text-align: left;
    padding-right: 5px;
    line-height: 1.25;
    margin-bottom: 10px;
}
#page_bottom #right_pic {
    width: 30%;
    float: right;
    padding-top: 20px;
}
#right_pic img {
    width: 90%;
}
#page_bottom a:link {
    color: #f6e011;
    text-decoration: none;
}