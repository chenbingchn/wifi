body {
    min-width: 300px;
    max-width: 640px;
    margin: 0 auto;
    color: #fff;
}
img {
    width: 100%;
}
#page_center {
    background: url(../../images/prize/bg_center.jpg) repeat-y;
    background-size: 100% 100%;
    margin-top: -60%;
}
#center_content {
    width: 79.02%;
    text-align: left;
    margin: 0 11.67% 0 9.31%;
}
#prize_list {
    width: 80%;
    margin: 0 10%;
    text-align: left;
    padding-bottom: 30px;
}
#title {
    font-size: 1.12em;
}
.prize_title {
    font-size: 1.167em;
    margin: 10px auto;
}
ul {
    list-style: none;
}
li {
    display: inline-block;
    width: 40%;
    padding-left: 8%;
    line-height: 25px;
    font-size: 1.1em;
}
#page_bottom {
    background: #78B82E;
}
#bottom_content {
    width: 79.02%;
    margin: 10% 11.67% 0 9.31%;
    padding-top: 80px;
}
.clearfix {
    clear: both;
}
#left_text {
    width: 60%;
    float: left;
    position: relative;
    top: 50%;
    -webkit-transform: translateY(-50%);
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
  }
#left_text p {
    font-size: 1em;
    text-align: left;
    padding-right: 5px;
    line-height: 1.25;
    margin-bottom: 10px;
}
#right_pic {
    width: 40%;
    float: right;
    position: relative;
    top: 50%;
    -webkit-transform: translateY(-50%);
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
}
a:link, a:visited {
    color: #f6e011;
    text-decoration: none;
}