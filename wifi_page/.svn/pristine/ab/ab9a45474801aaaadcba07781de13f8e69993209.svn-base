<?php
class wifi extends CI_Controller {

    public function find_wifi_en($page = 'find_wifi_en') {
        $this->load->helper('url');
    	if ( ! file_exists(APPPATH.'/views/wifi/'.$page.'.php')) {
        	show_404();
    	}
    	$this->load->view('wifi/'.$page);
    }

