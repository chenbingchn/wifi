body {
    min-width: 300px;
    max-width: 640px;
    margin: 0 auto;
    background-color: #f0f3f5;
}
.content {
    margin: 20px 0;
}
.content img {
    width: 80%;
}
.content p {
    font-size: 16px;
    text-align: left;
    margin: 20px 0;
    display: inline-block;
    width: 80%;
    line-height: 24px;
}
.content a {
    text-decoration: none;
    color: #329419;
}
.share_button {
    width: 150px;
    color: #fff;
    background-color: #63A700;
    margin: 20px auto 80px auto;
    padding: 10px 20px;
    border-radius: 7px;
    font-size: 16px;
}